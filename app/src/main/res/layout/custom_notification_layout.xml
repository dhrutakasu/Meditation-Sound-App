<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/Card_Notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4sdp"
        android:text="Notification Title"
        android:layout_marginStart="@dimen/_10sdp"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Card_Notification"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notification_sub_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Notification Title"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:padding="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Card_Notification"
        app:layout_constraintTop_toBottomOf="@id/notification_title" />

    <ImageView
        android:id="@+id/notification_PlayPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/ic_play"
        app:layout_constraintEnd_toStartOf="@+id/notification_Stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Card_Notification" />

    <ImageView
        android:id="@+id/notification_Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/ic_stop"
        app:layout_constraintStart_toEndOf="@id/notification_PlayPause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Card_Notification" />
</androidx.constraintlayout.widget.ConstraintLayout>