<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DialogColor">
        <item name="android:colorAccent">@color/purple_500</item>
        <item name="android:colorPrimary">@color/black</item>
    </style>

    <style name="TimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:headerBackground">@color/app_main_color_center</item>
        <item name="android:numbersTextColor">@color/black</item>
        <item name="android:timePickerMode">clock</item>
        <item name="android:numbersSelectorColor">@color/app_main_color_center</item>
        <item name="android:numbersBackgroundColor">@color/app_main_color_light20</item>
        <item name="android:background">@color/white</item>
        <item name="android:numbersInnerTextColor" tools:targetApi="m">@color/black</item>
        <item name="android:headerTimeTextAppearance">@style/TimeTextAppearance</item>
        <item name="android:headerAmPmTextAppearance">@style/TimeTextAppearance</item>
    </style>

    <style name="TimeTextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>